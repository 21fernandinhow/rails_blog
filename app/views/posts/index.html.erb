<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
    <p>
      <%= link_to "Show this post", post, class: "button is-danger is-outlined my-2" %>
    </p>
  <% end %>
</div>

<%= link_to "New post", new_post_path, class: "button is-danger is-outlined my-2" %>
